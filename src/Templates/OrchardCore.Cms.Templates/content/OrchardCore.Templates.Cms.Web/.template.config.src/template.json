{
  "$schema": "http://json.schemastore.org/template",
  "author": "Orchard Project",
  "classifications": [ "Web", "Orchard Core", "CMS" ],
  "name": "Orchard Core Cms Web App",
  "identity": "OrchardCore.Templates.Cms",
  "shortName": "occms",
  "sourceName": "OrchardCore.Templates.Cms",
  "preferNameDirectory": true,
  "symbols": {
    "UseNLog": {
      "type": "parameter",
      "dataType": "bool",
      "description": "Add NLog.config file",
      "defaultValue": "true"
    },
    "OrchardVersion": {
      "type": "parameter",
      "datatype": "string",
      "description": "Specifies which version of Orchard Core packages to use.",
      "replaces": "$(TemplateOrchardPackageVersion)",
      "defaultValue": "${TemplateOrchardVersion}"
    }
  },
  "sources": [
    {
      "exclude": [ "Properties/**/*", "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ],
      "modifiers": [
        {
          "condition": "(!UseNLog)",
          "exclude": [
            "NLog.config"
          ]
        }
      ]
    }
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  }
}